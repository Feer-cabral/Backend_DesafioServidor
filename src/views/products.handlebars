<h1>Bienvenidos a mi lista de productos</h1>

{{#each products}}
  <h2>{{this.title}}</h2>
  <ul>
    <li>{{this.description}}</li>
    <li>${{this.price}}</li>
    <li>Categoria: {{this.category}}</li>
  </ul>
  <button>Agregar al carrito</button>
{{/each}}

<div>
  {{#if hasPrevPage}}
    <a href="/api/products?page={{prevPage}}">Anterior</a>
  {{/if}}

  {{#if hasNextPage}}
    <a href="/api/products?page={{nextPage}}">Siguiente</a>
  {{/if}}
</div>

<p>Pagina {{currentPage}} de {{totalPages}}</p>